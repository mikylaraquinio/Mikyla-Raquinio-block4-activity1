<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".DateTime"
    android:background="#d8fad6">


    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/ram_logo"/>

    <TextView
        android:id="@+id/tv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_logo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:text="@string/choose_your_schedule"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/green"
        android:layout_marginTop="20dp"/>

    <CalendarView
        android:id="@+id/cv_calendar"
        android:layout_width="340dp"
        android:layout_height="306dp"
        android:layout_below="@+id/tv_schedule"
        android:background="@drawable/calendar_border"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_apt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_calendar"
        android:text="@string/select_time_of_appointment"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="15dp"
        android:textColor="@color/green"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/dropdownSpinner"
        android:layout_width="340dp"
        android:layout_height="46dp"
        android:background="@drawable/calendar_border"
        android:layout_below="@+id/tv_apt"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/tv_apt"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>

